<Window x:Class="IA_manoir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IA_manoir"
        mc:Ignorable="d"
        Title="IA Manoir" Height="450" Width="800">
    
    <Canvas x:Name="lecanvas">

        <TextBlock Text="Voici le manoir : " Margin="80,20" FontSize="20" FontFamily="Snap ITC"/>

        <Line X1="30" X2="30" Y1="60" Y2="360" Fill="Black" Stroke="Black" />
