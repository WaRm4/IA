        <Line X1="330" X2="330" Y1="60" Y2="360" Fill="Black" Stroke="Black" />

        <Line X1="30" X2="330" Y1="60" Y2="60" Fill="Black" Stroke="Red" />
        <Line X1="30" X2="330" Y1="120" Y2="120" Fill="Black" Stroke="Red" />
        <Line X1="30" X2="330" Y1="180" Y2="180" Fill="Black" Stroke="Red" />
