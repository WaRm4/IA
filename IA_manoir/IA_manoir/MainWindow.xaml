        <Ellipse Width="10" Height="10" Canvas.Left="155" Canvas.Top="245" Fill="Blue"/>
        <Ellipse Width="10" Height="10" Canvas.Left="155" Canvas.Top="305" Fill="Blue"/>

        <Ellipse Width="10" Height="10" Canvas.Left="215" Canvas.Top="65" Fill="Blue"/>
        <Ellipse Width="10" Height="10" Canvas.Left="215" Canvas.Top="125" Fill="Blue"/>
